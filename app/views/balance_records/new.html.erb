<h1>Run your scenario</h1>

<ul>
  <% Scenario.all.to_a.each do |sc| %>
    <li class="scenario-list-box" id="<%= 'scene-#{sc.id}' %>">
      <%= "#{sc.name}, Vest Level: #{sc.vest_level}" %>
    </li>
  <% end %>

  <%= form_tag("/results", method: "get") do %>
    <p>
      <%= label_tag(:balance, "Start Balance:") %>
      <%= text_field_tag(:balance) %>
    </p>
    <p>
      <%= label_tag(:start_date, "Start Date:") %>
      <%= date_field_tag(:start_date) %>
    </p>
    <p>
      <%= label_tag(:end_date, "End Date:") %>
      <%= date_field_tag(:end_date) %>
    </p>
    <p>
      <%= submit_tag("Run Scenario") %>
    </p>
  <% end %>
</ul>

