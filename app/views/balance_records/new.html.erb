<div class="big-title fadeInRight animated">
  Forecast
</div>

<h1>Run your plan</h1>
  <ul>
    <% Plan.all.to_a.each do |sc| %>
      <% if sc.user_id == current_user.id %>
        <li class="plan-list-box" id="<%= 'pl-#{sc.id}' %>">
          <%= "#{sc.name}, Vest Level: #{sc.vest_level}, id: #{sc.id}" %>
        </li>
      <% end %>
    <% end %>

    <%= form_tag("/results", method: "get") do %>
      <p>
        <%= label_tag(:plan_choice, "Choose Plan") %>
        <%= select_tag(:plan_choice, options_for_select(@plan_options_list)) %>
      </p>
      <p>
        <%= label_tag(:balance, "Start Balance:") %>
        <%= text_field_tag(:balance) %>
      </p>
      <p>
        <%= label_tag(:start_date, "Start Date:") %>
        <%= date_field_tag(:start_date) %>
      </p>
      <p>
        <%= label_tag(:end_date, "End Date:") %>
        <%= date_field_tag(:end_date) %>
      </p>
      <p>
        <%= submit_tag("Run Plan") %>
      </p>
    <% end %>
  </ul>

