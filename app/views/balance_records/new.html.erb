<div class="big-title fadeInRight animated">
  Forecast
</div>
<div class="forecast-box">
  

     <%= form_tag("#", method: "get") do %>
        <p>
          <%= label_tag(:plan_choice, "Choose Plan") %>
          <%= select_tag(:plan_choice, options_for_select(@plan_options_list), class: "form-control") %>
        </p>
        <p>
          <%= label_tag(:balance, "Start Balance:") %>
          <%= text_field_tag(:balance, "", class: "form-control") %>
        </p>
        <p>
          <%= label_tag(:start_date, "Start Date:") %>
          <%= date_field_tag(:start_date, "", class: "form-control") %>
        </p>
        <p>
          <%= label_tag(:end_date, "End Date:") %>
          <%= date_field_tag(:end_date, "", class: "form-control") %>
        </p>
       
      <% end %>
          <button class="form_control" id="forecast">Forecast</button>
</div>

<div class="demo-container fadeInRight" style="display: none;">
  <h1>Your Results</h1>
  <div id="placeholder" class="demo-placeholder" style="width:80%;height:70vh;"></div>
</div>


  <script type="text/javascript">
    $('input[type="submit"]').on('click', function() {
       $('form').addClass('fadeOutLeft animated'); 
    });
    $('#forecast').click(generateChart);
  </script>
</div>
