<% provide(:title, 'Sign up') %>
<div class="account-gallery">
  <h1>Sign up</h1>

  <div class="row">
    <div class="">
      <%= form_for(@user) do |f| %>
        <p>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </p>
          <%= f.label :email %>
          <%= f.email_field :email %>

        <p>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </p>
        
        <p>
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation %>
        </p>
        
        <p>
          <%= f.submit "Create my account", class: "btn btn-primary" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
